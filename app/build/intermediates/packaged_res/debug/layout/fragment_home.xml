<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="88dp">

            <!-- HEADER SECTION (Simplified - No gradient) -->
            <LinearLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:elevation="0dp"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Greeting -->
                <TextView
                    android:id="@+id/greeting_text"
                    style="@style/TextAppearance.Material3.HeadlineMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:accessibilityHeading="true"
                    android:text="@string/greeting_morning"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Good Morning" />

                <TextView
                    android:id="@+id/subtitle_text"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/subtitle_morning"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Let's start the day with productivity!" />

            </LinearLayout>

            <!-- MOTIVATIONAL QUOTE CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quote_card"
                style="@style/Widget.PerfectFit.Card.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Icon and Label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_sparkle"
                            app:tint="?attr/colorOnPrimaryContainer" />

                        <TextView
                            style="@style/TextAppearance.Material3.LabelLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Daily Inspiration"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                    </LinearLayout>

                    <!-- Quote Text -->
                    <TextView
                        android:id="@+id/motivational_quote_text"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.4"
                        android:text="Success is the sum of small efforts repeated day in and day out."
                        android:textColor="?attr/colorOnPrimaryContainer"
                        tools:text="Success is the sum of small efforts repeated day in and day out." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- DELIVERY ALERTS CARD (Order Pipeline) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/delivery_alerts_card"
                style="@style/Widget.PerfectFit.Card.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorErrorContainer"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_notification"
                            app:tint="?attr/colorOnErrorContainer" />

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:accessibilityHeading="true"
                            android:text="Upcoming Deliveries"
                            android:textColor="?attr/colorOnErrorContainer" />

                    </LinearLayout>

                    <!-- Alerts Container -->
                    <LinearLayout
                        android:id="@+id/delivery_alerts_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <!-- Alerts will be added here dynamically -->

                    </LinearLayout>

                    <!-- View All Orders Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/view_all_orders_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/action_view_all"
                        android:textColor="?attr/colorOnErrorContainer"
                        app:strokeColor="?attr/colorOnErrorContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- DASHBOARD STATS CARD (Consolidated) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dashboard_card"
                style="@style/Widget.PerfectFit.Card.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Section Header -->
                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:accessibilityHeading="true"
                        android:text="@string/section_overview"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Stats Grid (2x2) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Total Customers -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/total_customers_count"
                                style="@style/TextAppearance.Material3.DisplaySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="?attr/colorPrimary"
                                tools:text="24" />

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/stat_customers"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <!-- Total Orders -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/total_orders_count"
                                style="@style/TextAppearance.Material3.DisplaySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="?attr/colorPrimary"
                                tools:text="58" />

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/stat_orders"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Pending Orders -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/pending_orders_count"
                                style="@style/TextAppearance.Material3.DisplaySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/status_pending"
                                tools:text="12" />

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/stat_pending"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <!-- Completed Orders -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/completed_orders_count"
                                style="@style/TextAppearance.Material3.DisplaySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/status_completed"
                                tools:text="46" />

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/stat_completed"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- WORKLOAD STATUS CARD (Simplified) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/workload_status_card"
                style="@style/Widget.PerfectFit.Card.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSecondaryContainer"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:accessibilityHeading="true"
                            android:text="@string/workload_title"
                            android:textColor="?attr/colorOnSecondaryContainer" />

                        <TextView
                            android:id="@+id/workload_percentage"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            tools:text="45%" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/workload_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:max="100"
                        android:progress="45"
                        app:indicatorColor="?attr/colorSecondary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        app:trackCornerRadius="4dp"
                        app:trackThickness="8dp"
                        tools:progress="45" />

                    <!-- Message -->
                    <TextView
                        android:id="@+id/workload_message"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="You have good capacity available"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        tools:text="You have good capacity available" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FINANCIAL SUMMARY CARD (Consolidated) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/financial_dashboard_card"
                style="@style/Widget.PerfectFit.Card.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorTertiaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header with Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:accessibilityHeading="true"
                            android:text="@string/section_financial"
                            android:textColor="?attr/colorOnTertiaryContainer" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/toggle_financial_visibility"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/cd_toggle_financial_visibility"
                            app:icon="@android:drawable/ic_menu_view"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="?attr/colorOnTertiaryContainer" />

                    </LinearLayout>

                    <!-- Revenue Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Today's Revenue -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/revenue_today"
                                android:textColor="?attr/colorOnTertiaryContainer" />

                            <TextView
                                android:id="@+id/today_revenue"
                                style="@style/TextAppearance.Material3.HeadlineSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="₹0"
                                android:textColor="?attr/colorOnTertiaryContainer"
                                tools:text="₹2,500" />

                        </LinearLayout>

                        <!-- This Month's Revenue -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/revenue_month"
                                android:textColor="?attr/colorOnTertiaryContainer" />

                            <TextView
                                android:id="@+id/month_revenue"
                                style="@style/TextAppearance.Material3.HeadlineSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="₹0"
                                android:textColor="?attr/colorOnTertiaryContainer"
                                tools:text="₹48,500" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Outstanding Payments -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextAppearance.Material3.LabelMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pending_payments"
                                android:textColor="?attr/colorOnTertiaryContainer" />

                            <TextView
                                android:id="@+id/pending_payment_count"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="0 orders"
                                android:textColor="?attr/colorOnTertiaryContainer"
                                tools:text="3 orders" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/outstanding_amount"
                            style="@style/TextAppearance.Material3.HeadlineMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="?attr/colorError"
                            tools:text="₹8,500" />

                    </LinearLayout>

                    <!-- View Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/view_pending_payments_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/action_view_all"
                        android:textColor="?attr/colorOnTertiaryContainer"
                        app:strokeColor="?attr/colorOnTertiaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- QUICK ACTIONS CARD (Simplified) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/actions_card"
                style="@style/Widget.PerfectFit.Card.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:accessibilityHeading="true"
                        android:text="@string/section_quick_actions"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Workload Config Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/workload_config_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/action_workload_config" />

                    <!-- Sync Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sync_now_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/action_sync" />

                    <!-- Sync Status -->
                    <TextView
                        android:id="@+id/last_sync_text"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/sync_never"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Last sync: 2 hours ago" />

                    <TextView
                        android:id="@+id/sync_status_text"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Ready to sync"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <!-- Auto Sync Toggle -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="?attr/colorOutlineVariant" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/auto_sync_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Enable automatic sync"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- EXTENDED FAB (Primary Action) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="New"
        android:text="New"
        app:icon="@android:drawable/ic_input_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
