<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000" />
            <size android:width="90dp" android:height="90dp"/>
        </shape>
    </item>
    
    <!-- Main circle with gradient -->
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#1A5F7A"
                android:endColor="#57C5B6"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner white circle -->
    <item
        android:top="8dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>

