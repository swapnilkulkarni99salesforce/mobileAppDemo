<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#7A1D37"
                android:centerColor="#A6274A"
                android:endColor="#C43864"
                android:type="linear" />
            <size android:width="48dp" android:height="48dp"/>
        </shape>
    </item>
    
    <!-- Receipt icon -->
    <item
        android:drawable="@drawable/ic_order_avatar"
        android:gravity="center"
        android:width="28dp"
        android:height="28dp"/>
</layer-list>

