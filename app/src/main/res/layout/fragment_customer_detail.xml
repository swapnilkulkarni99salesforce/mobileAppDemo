<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground"
    tools:context=".CustomerDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Section (Clean - No gradient) -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryContainer"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/customer_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/cd_customer_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/young_lady"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/customer_name"
                style="@style/TextAppearance.Material3.HeadlineMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Customer Name"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimaryContainer"
                tools:text="Priya Sharma" />

        </LinearLayout>

        <!-- Personal Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/info_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_person"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Personal Information"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

                <!-- Age -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Age:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/customer_age"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 years"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="28 years" />

                </LinearLayout>

                <!-- Birth Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Birth Date:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/customer_birthdate"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/1990"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="15/03/1995" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Contact Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/contact_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_phone"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Contact Information"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

                <!-- Mobile -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/customer_mobile"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="+1 234 567 8900"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        tools:text="+91 98765 43210" />

                </LinearLayout>

                <!-- Alternate Mobile -->
                <LinearLayout
                    android:id="@+id/alternate_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Alternate:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/customer_alternate_mobile"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="+1 234 567 8901"
                        android:textColor="?attr/colorPrimary"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        tools:text="+91 98765 43211" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Address Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/address_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_location"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Address"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

                <TextView
                    android:id="@+id/customer_address"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="123 Main Street, City, State, 12345"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="123 Main Street, Bangalore, Karnataka 560001" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_measurements_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:minHeight="56dp"
            android:text="View Client Fit Profile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_order_button"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:minHeight="56dp"
            android:text="Create Order" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:minHeight="56dp"
            android:text="Back to Customers" />

    </LinearLayout>

</ScrollView>
