<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground"
    tools:context=".OrderDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Section (Clean - No gradient) -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondaryContainer"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:id="@+id/order_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/cd_order_icon"
                android:src="@drawable/ic_receipt"
                app:tint="?attr/colorOnSecondaryContainer" />

            <TextView
                android:id="@+id/order_id_text"
                style="@style/TextAppearance.Material3.HeadlineMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Order #12345"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondaryContainer"
                tools:text="Order #12345" />

        </LinearLayout>

        <!-- Customer Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/customer_info_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_person"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Customer Information"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Customer:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/detail_customer_name"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Priya Sharma" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Order Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/order_info_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_receipt"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Order Details"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

                <!-- Order Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Order Type:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/detail_order_type"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blouse"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Kurti" />

                </LinearLayout>

                <!-- Order Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Order Date:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/detail_order_date"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17/10/2025"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="17/10/2025" />

                </LinearLayout>

                <!-- Delivery Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Date:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/detail_delivery_date"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24/10/2025"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        tools:text="24/10/2025" />

                </LinearLayout>

                <!-- Amount -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="?attr/colorOutlineVariant" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Total Amount:"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/detail_amount"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1,500.00"
                        android:textColor="?attr/colorPrimary"
                        tools:text="₹2,500" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Order Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/status_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Current Status">

                    <AutoCompleteTextView
                        android:id="@+id/status_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_status_button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="48dp"
                    android:text="Update Status" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Production Tracking Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/production_tracking_card"
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_process"
                        app:tint="?attr/colorOnPrimaryContainer" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Production Tracking"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                </LinearLayout>

                <!-- Current Stage -->
                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Current Stage"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <TextView
                    android:id="@+id/production_current_stage"
                    style="@style/TextAppearance.Material3.HeadlineSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Pending"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold" />

                <!-- Progress Bar -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/production_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:progress="0"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorSurfaceVariant" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/production_time_in_stage"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="In stage for: -"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/production_progress_percentage"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Assigned Worker -->
                <TextView
                    android:id="@+id/production_assigned_worker"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Not assigned"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:visibility="gone" />

                <!-- Stage Timeline -->
                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Production Timeline"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <LinearLayout
                    android:id="@+id/production_timeline_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical" />

                <!-- Action Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/production_next_stage_button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="48dp"
                    android:text="Move to Next Stage" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/production_view_history_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="48dp"
                    android:text="View Complete History" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Special Instructions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/instructions_card"
            style="@style/Widget.PerfectFit.Card.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/detail_instructions"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minHeight="60dp"
                    android:text="No special instructions"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Please use silk thread for embroidery" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/payment_card"
            style="@style/Widget.PerfectFit.Card.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorTertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Details"
                    android:textColor="?attr/colorOnTertiaryContainer" />

                <!-- Payment Status Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/payment_status_badge"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Unpaid"
                    tools:text="Partially Paid" />

                <!-- Payment Breakdown -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- Total Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Amount:"
                            android:textColor="?attr/colorOnTertiaryContainer" />

                        <TextView
                            android:id="@+id/payment_total_amount"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹2,500"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            tools:text="₹2,500" />

                    </LinearLayout>

                    <!-- Advance Paid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Advance Paid:"
                            android:textColor="?attr/colorOnTertiaryContainer" />

                        <TextView
                            android:id="@+id/payment_advance"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹500"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            tools:text="₹500" />

                    </LinearLayout>

                    <!-- Balance Paid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Balance Paid:"
                            android:textColor="?attr/colorOnTertiaryContainer" />

                        <TextView
                            android:id="@+id/payment_balance_paid"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            tools:text="₹1,000" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Outstanding -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Outstanding:"
                            android:textColor="?attr/colorError" />

                        <TextView
                            android:id="@+id/payment_outstanding"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹2,000"
                            android:textColor="?attr/colorError"
                            tools:text="₹1,000" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Record Payment Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/record_payment_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="48dp"
                    android:text="Record Payment" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- WhatsApp Actions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/whatsapp_card"
            style="@style/Widget.PerfectFit.Card.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsApp Actions"
                    android:textColor="?attr/colorOnSecondaryContainer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/whatsapp_order_ready_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="48dp"
                    android:text="Order Ready - Notify Customer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/whatsapp_payment_reminder_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="48dp"
                    android:text="Send Payment Reminder"
                    app:strokeColor="?attr/colorOnSecondaryContainer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/whatsapp_custom_message_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="48dp"
                    android:text="Send Custom Message"
                    app:strokeColor="?attr/colorOnSecondaryContainer" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:minHeight="56dp"
            android:text="Back to Orders" />

    </LinearLayout>

</ScrollView>
