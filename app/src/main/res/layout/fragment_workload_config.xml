<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true"
    tools:context=".WorkloadConfigFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <!-- HEADER -->
        <TextView
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Workload Configuration"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:lineSpacingMultiplier="1.4"
            android:text="Configure your work schedule and order completion times"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- ORDER COMPLETION TIME SECTION -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Completion Time"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="How many hours does it take to complete a single order?"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/time_per_order_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Time per order (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/time_per_order_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="2.0" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- WORKING HOURS SECTION -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.PerfectFit.Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Working Hours"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Set your working hours for each day of the week"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <!-- Monday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/monday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Monday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/monday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="8.0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tuesday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tuesday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Tuesday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tuesday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="8.0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Wednesday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/wednesday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Wednesday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/wednesday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="8.0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Thursday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/thursday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Thursday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/thursday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="8.0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Friday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/friday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Friday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/friday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="8.0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Saturday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/saturday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Saturday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/saturday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="4.0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sunday -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sunday_hours_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Sunday (hours)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sunday_hours_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="0.0" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SUMMARY SECTION -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.PerfectFit.Card.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorTertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textColor="?attr/colorOnTertiaryContainer" />

                <TextView
                    android:id="@+id/summary_text"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Total weekly hours: 40.0 hours\nOrders per week: 20"
                    android:textColor="?attr/colorOnTertiaryContainer" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ACTION BUTTONS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_config_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="56dp"
            android:text="Save Configuration" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="56dp"
            android:text="Cancel" />

    </LinearLayout>

</ScrollView>
