<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mannequin and Measurements Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Mannequin Image -->
            <ImageView
                android:id="@+id/mannequin_image"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_mannequin_kurti"
                android:contentDescription="Mannequin for measurements"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Measurements List -->
            <LinearLayout
                android:id="@+id/measurements_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/mannequin_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Measurement Items -->
                <include layout="@layout/item_measurement"
                    android:id="@+id/kurti_length"/>
                
                <include layout="@layout/item_measurement"
                    android:id="@+id/full_shoulder"/>
                
                <include layout="@layout/item_measurement"
                    android:id="@+id/upper_chest_round"/>
                
                <include layout="@layout/item_measurement"
                    android:id="@+id/chest_round"/>
                
                <include layout="@layout/item_measurement"
                    android:id="@+id/waist_round"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Additional Measurements in Full Width Cards -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="Detailed Measurements"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/rose_gold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/measurements_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>

</ScrollView>

