<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PerfectFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - Modern Teal -->
        <item name="colorPrimary">@color/primary_gradient_start</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color - Vibrant Teal -->
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorSecondaryVariant">@color/primary_gradient_end</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    
    <!-- Measurement Label Style -->
    <style name="MeasurementLabelStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/on_surface_light</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Measurement Value Style -->
    <style name="MeasurementValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/rose_gold_dark</item>
        <item name="android:fontFamily">monospace</item>
    </style>
</resources>

